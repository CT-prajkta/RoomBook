<h3 align="center"> Arrange new Meet</h3>
<%= render 'shared/errors', obj: @meet %>
<div class='row'>
	<div class='col-xs-12'>
    <%= form_for(@meet, :url => {:controller => :meet, action: :create})  do |f| %>
            <div class="form-group">
                <div class="control-label col-sm-2">
                    <%= f.label :subject %>
                </div>
                <div class="col-sm-6">
                	<%= f.text_field :subject, placeholder: "enter subject" %>
                </div>
			</div><br><br><br>
			<div class="form-group">
				<div class="control-label col-sm-2">
					<%= f.label :description %>
				</div>
				<div class="col-sm-6">
					<%= f.text_area :description, rows: 2, placeholder: "Body of meeting" %>
				</div>
			</div><br><br><br>
			<p id="notice"><%= notice %> format for meet_to_datetime and meet_date_time is 2019-08-12T00:00:00 </p>
			<div class="form-group">
				<div class="control-label col-sm-2">
					<%= f.label :meet_date_time %>
				</div>
				<div class="col-sm-6">
					<%= f.datetime_field :meet_date_time %>
				</div>
			</div><br><br><br>
			<div class="form-group">
				<div class="control-label col-sm-2">
					<%= f.label :meet_to_datetime %>
				</div>
				<div class="col-sm-6">
					<%= f.datetime_field :meet_to_datetime %>
				</div>
			</div><br><br><br>
			<div class="form-group">
				<div class="control-label col-sm-2">
					<%= f.label :req_seats %>
				</div>
				<div class="col-sm-6">
					<%= f.number_field :req_seats, placeholder: "enter Required Seats" %>
				</div>
			</div><br><br><br>
			<div class="form-group", disabled: !(@meet.req_seats.empty? && @meet.meet_date_time.empty? && @meet.meet_to_datetime.empty?).to_s >
				<div class="row">    
					<div class="col-sm-offset-2 col-sm-10">
						<% @rooms.each do |room| %>
							<% if room.capacity.to_i > @meet.req_seats.to_i %>
								<% @meets.each do |mt| %>
									<% if (mt.room_id == room._id) && (mt.meet_date_time < @meet.meet_date_time && mt.meet_to_datetime > @meet. meet_date_time) && (mt.meet_date_time < @meet.meet_to_datetime && mt.meet_to_datetime < @meet. meet_to_datetime) %>
										<%= f.radio_button :room_id, room.id %>
										<%= f.label :room_id, room.room_no %>
									<% end %>
								<% end %>
							<% end %>
					  	<% end %>
					</div>            
				</div>            
			</div><br><br><br>
	
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <%= f.submit(@meet.new_record? ? "New Meet Create" : "Update account", class: 'btn btn-primary btn-lg') %>
                </div>
            </div>
        <% end %>
        <div class="col-xs-6 col-xs-offset-4">
            [ <%= link_to "Cancel request and return to home", root_path %> ]
        </div>
    </div>
</div>