<h1 align="center"> Lon In</h1>

<div class='row'>
    <div class='col-xs-12'>
    <%= form_for(:session, :url => {:controller => :sessions, action: :create})  do |f| %>
            <div class="form-group">
                <div class="control-label col-sm-2">
                    <%= f.label :username %>
                </div>
                <div class="col-sm-6">
                <%= f.text_field :username, class: "form-control", placeholder: "enter username", autofocus: true %>

                </div>
            </div><br><br><br>
            <div class="form-group">
                <div class="control-label col-sm-2">
                    <%= f.label :password %>
                </div>
                <div class="col-sm-6">
                    <%= f.password_field :password, class: "form-control", placeholder: "enter password", autocomplete: "off" %>
                </div>
            </div>
            <br><br>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <%= f.submit "Log In", class: 'btn btn-primary btn-lg' %>
                </div>
            </div>
        <% end %>
        <br><br>
        <div class="col-xs-4 col-xs-offset-4">
            [ <%= link_to "Cancel request and return to home", root_path %> ]
        </div>
    </div>
</div>