<%= render 'shared/errors', obj: @user %>

<div class='row'>
    <div class='col-xs-12'>
    <%= form_for(@user, :url => {:controller => :user, action: :create})  do |f| %>
        <!---%= form_for (@user||(User.new(user_params)), :remote => true, :as => :user, :url => {:controller => :user, action: :create}, :html => {:class => 'form-horizontal'})  do |f| %--->
            <div class="form-group">
                <div class="control-label col-sm-2">
                    <%= f.label :username %>
                </div>
                <div class="col-sm-6">
                    <%= f.text_field :username, class: "form-control", placeholder: "Enter User Name", autofocus: true %>
                </div>
            </div>
            <br>
            <br>
            <br>
            <div class="form-group">
                <div class="control-label col-sm-2">
                    <%= f.label :password %>
                </div>
                <div class="col-sm-6">
                    <%= f.password_field :password, class: "form-control", placeholder: "enter password" %>
                </div>
            </div>
            <br><br>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <%= f.submit(@user.new_record? ? "Sign Up" : "Update account", class: 'btn btn-primary btn-lg') %>
                </div>
            </div>
        <% end %>
        <br><br>
        <div class="col-xs-4 col-xs-offset-4">
            [ <%= link_to "Cancel request and return to home", root_path %> ]
        </div>
    </div>
</div>