<p id="notice"><%= notice %></p>

<h1>Rooms</h1>

<table>
  <thead>
    <tr>
      <th>Room Number</th>
      <th>Room Capacity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td><%= room.room_no %></td>
        <td><%= room.capacity %></td>
        <td><%= link_to 'Show', room %></td>
        <td><%= link_to 'Edit', edit_room_path(room) %></td>
        <td><%= link_to 'Destroy', room, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Sign up', signup_path %>
<h1>Room#index</h1>
<p>Find me in app/views/room/index.html.erb</p>
<div>
    <%= link_to 'Edit', edit_room_path(@room)  %>
    <%= link_to "Delete room", room_path, method: :delete,
                    data: {  confirm: "Are you sure you want to delete the room?"},
                    class: "btn btn-xs btn-danger" %>
                        <%= link_to 'Show', @room %> |
</div>